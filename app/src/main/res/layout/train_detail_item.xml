<!-- 上圆角-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/wrap_layout"
    android:layout_marginTop="20dp">


    <!-- 无圆角-->
    <LinearLayout style="@style/mid_layout">

        <TextView
            android:id="@+id/train_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="G8033"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/start_station"
                style="@style/usertext"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="广州"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="12:12"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/arrow_right" />
            <TextView
                android:id="@+id/time_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1天13时13分"/>

        </LinearLayout>




        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/end_station"
                android:layout_width="match_parent"
                style="@style/usertext"
                android:gravity="center"
                android:text="北京"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="12:12"/>
        </LinearLayout>

    </LinearLayout>

    <!-- 分割线 -->
    <View
        style="@style/bg_line"
        android:layout_height="2px" />


    <!-- 下圆角-->
    <LinearLayout
        style="@style/bottom_layout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="商务座:￥"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/price_sw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1111"
                    android:gravity="left"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="一等座:￥"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/price_yd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1111"
                    android:gravity="left"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="二等座:￥"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/price_ed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1111"
                    android:gravity="left"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="软卧:￥"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/price_rw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1111"
                    android:gravity="left"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="硬卧:￥"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/price_yw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1111"
                    android:gravity="left"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="硬座:￥"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/price_yz"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1111"
                    android:gravity="left"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- 分割线 -->
    <View
        style="@style/bg_line"
        android:layout_height="2px" />


</LinearLayout>